
FROM linuxserver/webtop:ubuntu-xfce

# Prevent interactive prompts
ENV DEBIAN_FRONTEND=noninteractive

# 1. Install System Dependencies
RUN apt-get update && apt-get install -y \
    python3.10 \
    python3-pip \
    python3-venv \
    python3-tk \
    libatk1.0-0 \
    git \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# 2. Setup Working Directory
WORKDIR /app/fyodoros

# 3. Copy Source Code
# Assuming the build context is the repo root
COPY pyproject.toml .
COPY src/ ./src/

# 4. Install FyodorOS
# We use pip to install the package in editable mode or standard mode
RUN pip3 install .

# 5. Environment Variables
ENV DISPLAY=:1
ENV PYTHONUNBUFFERED=1

# Expose the web port (already exposed by base image, but good for clarity)
EXPOSE 3000
